#navbar
    position fixed
    z-index 1
    top 0
    left 0
    display flex
    flex-direction row
    justify-content center
    align-items center
    width 100%
    height 52px
    background-color rgba(255,255,255,.85)
    backdrop-filter blur(30px)
    border-bottom 1px solid var(--border)

    @media screen and (max-width 768px)
        &
            display none